<h1>Request Group Rate</h1>
<form>
	referrer Value:<input type="text" id="referrerId" name="referrerName">
	Name: <input type="text" id="fieldName" name="name"><br>
	Group size: <input type="text" name="groupSize"><br>
	Email: <input type="email" name="email"><br>
	<input type="submit" value="Submit">
</form>
<script>
	function getQueryString(name)
	{
	    var reg = new RegExp("(^[&?]*)"+ name +"=([^&]*)(&|$)");
	    var r = window.location.search.substr(1).match(reg);
	    if(r!=null)return  unescape(r[2]);
	    return null;
	}
	$(document).ready(function(){
		var referrer = getQueryString('src');
		if(referrer == 'hoodriver'){
			referrer = 'http://localhost:3000/tours/hood-river';
		}
		else if(referrer == 'oregoncoast'){
			referrer = 'http://localhost:3000/tours/oregon-coast';
		}
		else{
			referrer = '';
		}
		$('input[name="referrerName"]').val(referrer);
	});
</script>